source 'https://rubygems.org'

# Simple sinatra app
gem 'sinatra'
gem 'sinatra-contrib'

# Pull our revs EventSwarm gem.
gem 'revs', :git => 'https://github.com/eventswarm/revs'

# Use jbundler to manage jar dependencies
gem 'jbundler'

# generate short identifiers for each stream instance
gem 'hashids'